<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path "project.jpg" %>);">
  <div class="container">
    <h1>Make your <strong>own cocktail</strong> be <strong>creative</strong>!</h1>
    <%= link_to "Try it Now", new_cocktail_path, class: "btn btn-flat" %>
  </div>
</div>




<div class="container pad20">
   <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                  url('<%= cl_image_path cocktail.photo.key %>');">

       <div class="card-description">
         <h2> <%= cocktail.name.capitalize  %> </h2>
       </div>

      <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
       </div>
    </div>
  <% end %>
  </div>

</div>










